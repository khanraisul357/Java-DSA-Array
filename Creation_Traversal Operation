package array_operations.creation_traversal_operation;
import java.util.Scanner;

public class ArrayCreation {
	
	public static void arrayCreation() {
		
		//Method 1:-Declaration & Initialization(Compile-time Initialization) at the same time.
		int[] array= {11,4,9,2,16}; //no need to specify array size at compile-time.
				
		//Method 2:- Only Declaration without initialization & Run-time Initialization
		int[] arr=new int[10]; //must need to specify array size at compile-time.
		
		/*(Run-time Initialization)*/
		Scanner input=new Scanner(System.in);
				
		for(int i=0;i<arr.length;i++) {
			System.out.printf("arr[%d] = ",i);
			arr[i]=input.nextInt();
		}
				
	}
	    
}




	
	


