package array_operations.creation_traversal_operation;
import java.util.Scanner;

class ArrayCreation {
	
	public static void arrayCreation() {
		
		//Method 1:-Declaration & Initialization(Compile-time Initialization) at the same time.
		int[] array= {11,4,9,2,16}; //no need to specify array size at compile-time.
				
		//Method 2:- Only Declaration without initialization & Run-time Initialization
		int[] arr=new int[10]; //must need to specify array size at compile-time.
		
		/*(Run-time Initialization)*/
		Scanner input=new Scanner(System.in);
				
		for(int i=0;i<arr.length;i++) {
			System.out.printf("arr[%d] = ",i);
			arr[i]=input.nextInt();
		}
				
	}
	    
}



class ArrayTraversal {

        //traverse through a single loop
	public static void arrayTraversalUsingSingleLoop() {
		
		int[] array= {11,4,9,2,16};
		
		System.out.print("{");
		for(int i=0;i<array.length;i++) {
			
			//output formating
			if(i>0) {
				System.out.print(", ");
			}
			System.out.print(array[i]);
		}
		System.out.print("}");
		
	}


	//traverse through a for-each loop
        public static void arrayTraversalUsingForEachLoop() {
		
		int[] array= {12,5,8,1,14};		
		
		for(int a:array) {
			System.out.print(a+" ");
		}
		
	}

}



public class Main {

	public static void main(String[] args) {
		
		ArrayTraversal.arrayTraversalUsingSingleLoop();
		
		System.out.println();
		
		ArrayTraversal.arrayTraversalUsingForEachLoop();

	}

}	
